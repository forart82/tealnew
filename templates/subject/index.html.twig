<!DOCTYPE html>

<title>Subject index</title>

{% block body %}
    <h1>Subject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>AnswerOne</th>
                <th>AnswerTwo</th>
                <th>AnswerThree</th>
                <th>AnswerFour</th>
                <th>AnswerFive</th>
                <th>Position</th>
                <th>UserNotation</th>
                <th>Title</th>
                <th>IsRespond</th>
                <th>Language</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.question }}</td>
                <td>{{ subject.answerOne }}</td>
                <td>{{ subject.answerTwo }}</td>
                <td>{{ subject.answerThree }}</td>
                <td>{{ subject.answerFour }}</td>
                <td>{{ subject.answerFive }}</td>
                <td>{{ subject.position }}</td>
                <td>{{ subject.userNotation }}</td>
                <td>{{ subject.title }}</td>
                <td>{{ subject.isRespond ? 'Yes' : 'No' }}</td>
                <td>{{ subject.language }}</td>
                <td>
                    <a href="{{ path('subject_show', {'id': subject.id}) }}">show</a>
                    <a href="{{ path('subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subject_new') }}">Create new</a>
{% endblock %}
