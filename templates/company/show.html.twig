{% extends 'MAIN/base.html.twig' %}

{% block body %}
	<div class="list-teal">
		<img class="list-teal-logo" src="/contents/images/logos/tlb.png" alt="logo tlb">
		<h1 class="h1 list-teal-title">Company index</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ company.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ company.name }}</td>
				</tr>
				<tr>
					<th>Matricule</th>
					<td>{{ company.matricule }}</td>
				</tr>
				<tr>
					<th>Logo</th>
					<td>{{ company.logo }}</td>
				</tr>
				<tr>
					<th>Language</th>
					<td>{{ company.language }}</td>
				</tr>
			</tbody>
		</table>
		<div class="list-teal-btnline">
			<a class="btnGlobalSmall" href="{{ path('company_index') }}">back to list</a>
			<a class="btnGlobalSmall" href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
			{{ include('MAIN/_delete_form.html.twig') }}
		</div>
	</div>

{% endblock %}
