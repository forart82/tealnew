<!DOCTYPE html>

<title>Images index</title>

{% block body %}
    <h1>Images index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Svg</th>
                <th>SvgColor</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.name }}</td>
                <td>{{ image.svg }}</td>
                <td>{{ image.svgColor }}</td>
                <td>{{ image.category }}</td>
                <td>
                    <a href="{{ path('images_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('images_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('images_new') }}">Create new</a>
{% endblock %}
