{% extends 'MAIN/base.html.twig' %}
{% block title %}Log in!
{% endblock %}
{% block body %}
	<form id="loginMain" method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<div id="loginImg">
			<img src="/contents/images/logos/tlb.png" alt="logo tlb">
		</div>
		<div id="loginTitle">{{ 'SignInWelcome'|trans|raw }}</div>
		<div id="loginForm">
			<input type="email" value="{{ last_username }}" name="email" id="loginInputEmail" class="form-control" placeholder="{{ 'SignInEmail'|trans|raw }}" required autofocus>
			<input type="password" name="password" id="loginInputPassword" class="form-control" placeholder="{{ 'SignInPassword'|trans|raw }}" required>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		</div>
		<button id="loginSubmit" class="btnGlobal" type="submit">
			{{ 'btSignIn'|trans|raw }}
		</button>
	</form>
{% endblock %}
