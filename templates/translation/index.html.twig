<!DOCTYPE html>

<title>Translation index</title>

{% block body %}
    <h1>Translation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for translation in translations %}
            <tr>
                <td>{{ translation.id }}</td>
                <td>{{ translation.text }}</td>
                <td>
                    <a href="{{ path('translation_show', {'id': translation.id}) }}">show</a>
                    <a href="{{ path('translation_edit', {'id': translation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('translation_new') }}">Create new</a>
{% endblock %}
